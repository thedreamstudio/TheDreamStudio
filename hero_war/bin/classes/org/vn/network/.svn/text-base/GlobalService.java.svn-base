	public void LAYOUT_ARMY() {
		Message m = new Message(CommandClientToServer.LAYOUT_ARMY);
		try {
			// Random vi tri enemy
			// Luu y khong dc trung` vi tri vua hoac linh truoc do
			// Khong dc nam ngoai ban do
			ArrayList<Point> listPos = new ArrayList<Point>();
			int minX = Math.max(mCurrentGameInfo.xTileKing
					- mCurrentGameInfo.rangerSetupEnemy, 0);
			int maxX = Math.min(mCurrentGameInfo.xTileKing
					+ mCurrentGameInfo.rangerSetupEnemy,
					mCurrentGameInfo.mMapSelected.mapType.row - 1);
			int minY = Math.max(mCurrentGameInfo.yTileKing
					- mCurrentGameInfo.rangerSetupEnemy, 0);
			int maxY = Math.min(mCurrentGameInfo.yTileKing
					+ mCurrentGameInfo.rangerSetupEnemy,
					mCurrentGameInfo.mMapSelected.mapType.column - 1);
			for (int y = minY; y <= maxY; y++) {
				for (int x = minX; x <= maxX; x++) {
					if (x != mCurrentGameInfo.xTileKing
							|| y != mCurrentGameInfo.yTileKing) {
						listPos.add(new Point(x, y));
					}
				}
			}
			for (Enemy enemy : mCurrentGameInfo.listIdEnemyChosse) {
				Point point = listPos.remove(Utils.RANDOM.nextInt(listPos
						.size()));
				m.writer().writeInt(enemy.armyId);
				enemy.xTile = point.x;
				enemy.yTile = point.y;
				m.writer().writeInt(point.x);
				m.writer().writeInt(point.y);
			}
		} catch (IOException e) {
			e.printStackTrace();
		}
		mSession.sendMessage(m);
		m.cleanup();
	}

